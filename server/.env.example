PORT=4000
DATABASE_URL=postgres://postgres:postgres@localhost:5432/project_hub
UPLOAD_DIR=uploads
JWT_SECRET=change_this_to_a_strong_secret

# Super admin configuration
# Only this email is treated as the system-wide admin with full access
SUPERADMIN_EMAIL=admin@company.com
# For development convenience; lets you login as SUPERADMIN_EMAIL using this password
SUPERADMIN_PASSWORD=ChangeMe_Strong123

# Registration/security toggles
# When false (default), only the super admin can register users via /auth/register or /api/admin/register-user
PUBLIC_REGISTRATION=false
# Allow the /auth/bootstrap-admin endpoint in dev to create the super admin user if missing
ALLOW_ADMIN_BOOTSTRAP=true

# CORS/app URLs
FRONTEND_BASE_URL=http://localhost:5173
CORS_ALLOW_ALL=true
ALLOW_DEV_HEADERS=true
NODE_ENV=development
ENABLE_DEV_AUTH=true

# SMTP settings for sending real emails
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=apikey_or_username
SMTP_PASS=secret_or_app_password
SMTP_SECURE=false
MAIL_FROM="Remora <no-reply@example.com>"

# Holidays configuration (optional)
# Default country code for holidays (ISO 3166-1 alpha-2)
HOLIDAY_DEFAULT_COUNTRY=LK
# HolidayAPI.com key (fallback provider)
